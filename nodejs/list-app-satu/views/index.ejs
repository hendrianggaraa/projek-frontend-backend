<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>LIST HENDRI</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
</head>

<body>
    <header>
        <a class="header-logo" href="/">LIST</a>
    </header>
    <div class="container">
        <div class="container-header">
            <h1>Shopping List Hendri</h1>
            <a href="/new" class="new-button">+ Add item</a>
        </div>
        <div class="index-table-wrapper">
            <div class="table-head">
                <span class="id-column">ID</span>
                <span>Item</span>
            </div>

            <ul class="table-body">
                <!-- Delete the three <li> elements below -->
                <% let id = 0 %>
                <% items.forEach((item) => { %>
                <li>
                    <div class="item-data">
                        <span class="id-column"><%= ++id %></span>
                        <span class="name-column"><%= item.name %></span>
                    </div>
                    <div class="item-menu">
                        <!-- Add a form tag -->
                        <form action="/delete/<%= item.id %>" method="post">
                            <input type="submit" value="Delete" onclick="return confirm('Are you sure?');">
                        </form>
                        <!-- Edit -->
                        <a href="/edit/<%= item.id %>">Edit</a>
                    </div>
                </li>
                <% }); %>

            </ul>
        </div>
    </div>
</body>

</html>